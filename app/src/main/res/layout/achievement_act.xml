<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvText_TAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16pt"
        android:layout_margin="5pt"
        android:fontFamily="@font/ptsans_bolditalic"
        android:textAlignment="center"
        android:text="Твои достижения" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/LV_AchievementAct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </ScrollView>

    <Button
        android:id="@+id/ReturnToAccount"
        android:layout_margin="5pt"
        android:backgroundTint="@color/Main"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Вернуться"
        android:onClick="ReturnToAccountButton"
        android:drawableTop="@drawable/question"
        android:textSize="5pt"
        android:layout_height="wrap_content"/>

</LinearLayout>