<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgView_QA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/logo_banner_fin_foreground"/>

    <TextView
        android:id="@+id/tvQuestion_QActA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:textAlignment="center"
        android:layout_margin="5pt"
        android:fontFamily="@font/steclo_extralight"
        android:text="Вопрос " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="9">
        <ListView
            android:id="@+id/LVQuestionList_QActivityA"
            android:layout_width="match_parent"
            android:rotation="90"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvText_QActA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16pt"
        android:layout_margin="5pt"
        android:fontFamily="@font/steclo_extralight"
        android:text="Title text" />

    <ListView
        android:id="@+id/LV_QActivityA"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/LVQA_Fail"
        android:onClick="onFail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:textColor="@color/white"
        android:text="Отказаться от ответа на вопрос"
        android:backgroundTint="#FF0000"/>
</LinearLayout>