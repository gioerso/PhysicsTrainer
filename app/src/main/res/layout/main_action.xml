<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgView_Q"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/logo_banner_fin_foreground"/>
    <TextView
        android:id="@+id/tvText_QAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13pt"
        android:layout_margin="5pt"
        android:fontFamily="@font/ptsans_regular"
        android:textAlignment="center"
        android:text="Привет, name \nВыбери действия\nдля продолжения" />
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/nextEducationButton"
            android:layout_margin="5pt"
            android:backgroundTint="@color/Main"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:onClick="nextEducation"
            android:textAlignment="center"
            android:text="Продолжить \nобучение"
            android:drawableTop="@drawable/question"
            android:textSize="5pt"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_margin="5pt"
            android:textAlignment="center"
            android:text="Оглавление">
        </TextView>

        <Spinner
            android:id="@+id/spinner"
            android:textSize="14pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selection"
            android:layout_width="match_parent"
            android:layout_margin="5pt"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/setChaptersButton"
            android:layout_margin="5pt"
            android:backgroundTint="@color/Main"
            android:layout_width="match_parent"
            android:drawableTop="@drawable/ic_baseline_format_list_bulleted_24"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:onClick="selectChapter"
            android:text="Выбрать главу"
            android:textSize="5pt"
            android:layout_height="wrap_content"/>
    </LinearLayout>
